# ===============================
# Django Settings
# ===============================
SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===============================
# Database Configuration
# ===============================
# SQLite (Development)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# PostgreSQL (Production - Uncomment to use)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=linkedup_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-db-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# ===============================
# Cache Configuration (Redis)
# ===============================
REDIS_URL=redis://127.0.0.1:6379/1

# ===============================
# Email Configuration
# ===============================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# ===============================
# JWT/Token Settings
# ===============================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===============================
# AWS S3 (For media uploads in production)
# ===============================
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=linkedup-media
# AWS_S3_REGION_NAME=us-east-1

# ===============================
# Third-party Services
# ===============================
# Stripe (for premium subscriptions)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key

# ===============================
# Logging
# ===============================
LOG_LEVEL=INFO
